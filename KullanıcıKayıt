    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
       if (txt_kullanıcıad.getText().length()>0 && txt_şifre.getText().length()>0) {
            
        try
        {
            conn = db.db_conn();
            String sql = "INSERT INTO KULLANICILAR (KULLANICIAD, KULLANICISIFRE) VALUES(?,?)";
            pst = conn.prepareStatement(sql);
            pst.setString(1, txt_kullanıcıad.getText());
            pst.setString(2, txt_şifre.getText());
            pst.execute();
            txtresetle();
            JOptionPane.showMessageDialog(null, "Kayıt Eklenmiştir");
        }
        catch(Exception ex)
        {
         JOptionPane.showMessageDialog(null, ex);   
        }
        finally
        {
            try
            {
                conn.close();
            }
            catch(Exception ex)
            {
            }
        }
       }
       else{
       JOptionPane.showMessageDialog(null, "Kullanıcı adı veya şifre boş bırakılamaz");
       }
    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
       AnaMenu anamenu=new AnaMenu();
       anamenu.setVisible(true);
       this.setVisible(false);
    }                                        
  private void txtresetle(){
 txt_kullanıcıad.setText("");txt_şifre.setText("");
}
