    private void btn_girisActionPerformed(java.awt.event.ActionEvent evt) {                                          
        try {
            conn = db.db_conn();
            String sql = "SELECT*FROM KULLANICILAR WHERE KULLANICIAD=? AND KULLANICISIFRE=?";
            pst = conn.prepareStatement(sql);
            pst.setString(1, txt_kullanıcıad.getText());
            pst.setString(2, txt_sifre.getText());
            rs = pst.executeQuery();
            if (rs.next()) {
                int id = rs.getInt(1);
                aktifkullanıcı.kullaniciid = id;
                JOptionPane.showMessageDialog(null, "Giriş başarılı");
                AnaMenu anamenu = new AnaMenu();
                anamenu.setVisible(true);
                this.dispose();
            } else {
                JOptionPane.showMessageDialog(null, "kullanıcı adı veya şifre yanlış");
            }
        } catch (Exception ex) {
            JOptionPane.showMessageDialog(null, ex);
        } finally {
            try {
                conn.close();
            } catch (Exception ex) {
            }
        }
    }                                         

    private void btn_sifregosterActionPerformed(java.awt.event.ActionEvent evt) {                                                
        if (btn_sifregoster.isSelected()) {
            txt_sifre.setEchoChar((char) 0);
        } else {
            txt_sifre.setEchoChar('*');
        }
    }                                               

    private void btn_kapatActionPerformed(java.awt.event.ActionEvent evt) {                                          
        System.exit(0);
    }                                         

